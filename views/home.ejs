<% include head %>
    <div class="container">
        <% if (typeof recommendations !== 'undefined') { %>
            <div>
                <h2>Here are some games you may like:</h2>
                <div class="gallery-container">
                    <div id="gallery" class="col-4">
                <% recommendations.forEach(function(game) { %>
                  <div class="element item view view-tenth" data-zlname="reverse-effect">
                      <img src="/img/games/<%= game.file_name %>" alt="<%= game.name %>" />
                      <div class="mask">
                          <h2><%= game.name %> </h2>
                      </div>
                  </div>
                <% }); %>
                    </div>
                </div>
            </div>
        <% }
        else { %>
            <div>
                <h2>Choose a way to define your game preferences:</h2>
                <a href="/judge" class="btn btn-warning">By games</a>
                <a href="/self_describe" class="btn btn-info">By questions</a>
            </div>
        <% } %>
        
        <% if (typeof message === 'string') { %>
          <p><%= message %></p>
        <% } %>
    </div> <!-- container -->

    <% include plugins %>

<% include foot %>